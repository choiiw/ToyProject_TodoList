<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.toyproject.todolist.repository.UserMapper">

    <select id="getUserById" parameterType="String" resultType="java.lang.Integer">
        select
            user_tb.userId
        from
            user_tb
        where
            userName = #{userName}
    </select>
    <select id="getTodoListByUserId" parameterType="String" resultType="com.toyproject.todolist.dto.RespUserDto">
        select
            todolist_tb.*
        from
            user_tb join todolist_tb
        on
            user_tb.userId = todolist_tb.userId
    </select>
</mapper>